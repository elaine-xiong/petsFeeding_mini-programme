/* pages/history/history.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f8f9fa;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.nav-btn:active {
  background: #e9ecef;
}

.month-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.calendar {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.week-header {
  display: flex;
  margin-bottom: 20rpx;
}

.week-day {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: calc(100% / 7);
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.calendar-day.current-month {
  color: #333;
}

.calendar-day.other-month {
  color: #ccc;
}

.calendar-day.today {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
}

.calendar-day.has-record:not(.today) {
  background: #e8f5e8;
}

.day-number {
  font-size: 28rpx;
  font-weight: bold;
}

.record-dot {
  width: 8rpx;
  height: 8rpx;
  background: #4caf50;
  border-radius: 50%;
  position: absolute;
  bottom: 8rpx;
}

.calendar-day.today .record-dot {
  background: white;
}

.legend {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.legend-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.has-record-dot {
  background: #4caf50;
}

.today-dot {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.no-records {
  text-align: center;
  padding: 60rpx 20rpx;
}

.no-records-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.no-records-text {
  font-size: 28rpx;
  color: #666;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.pet-record {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
}

.pet-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.pet-avatar {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

.pet-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.pet-placeholder {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.pet-info {
  flex: 1;
}

.pet-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.feeding-summary {
  font-size: 22rpx;
  color: #666;
}

.feeding-times {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.time-item {
  background: white;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time {
  font-size: 22rpx;
  color: #333;
  font-weight: bold;
}

.amount {
  font-size: 20rpx;
  color: #666;
}