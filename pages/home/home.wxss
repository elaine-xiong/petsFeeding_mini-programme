/* pages/home/home.wxss */
.container {
  padding: 20rpx 20rpx 120rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

.pets-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pet-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.pet-layout {
  display: flex;
  align-items: flex-start;
  gap: 30rpx;
}

/* 左侧头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.pet-name-on-avatar {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

/* 右侧进食信息区域 */
.feeding-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.no-feeding-today {
  padding: 20rpx 0;
}

.no-feeding-text {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
}

.feeding-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.feeding-record {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border-left: 4rpx solid #ff6b35;
}

.feeding-time {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  min-width: 100rpx;
}

.feeding-order {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.feeding-amount {
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: bold;
}

/* 底部投喂按钮 */
.bottom-feed-button {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
}

.feed-circle-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.feed-circle-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 53, 0.6);
}