/* pages/home/home.wxss */
.container {
  padding: 20rpx 20rpx 120rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}


.pets-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pet-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.pet-layout {
  display: flex;
  align-items: flex-start;
  gap: 30rpx;
}

/* 左侧头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.pet-name-on-avatar {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

/* 右侧进食信息区域 */
.feeding-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 进食状态概览 */
.feeding-status {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  border-radius: 15rpx;
  padding: 20rpx;
  color: white;
  margin-bottom: 10rpx;
}

.status-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
}

.status-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.feeding-count {
  font-size: 32rpx;
  font-weight: bold;
}

.feeding-total {
  font-size: 28rpx;
  font-weight: bold;
  opacity: 0.9;
}

.no-feeding-today {
  padding: 20rpx;
  text-align: center;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx dashed #ddd;
}

.no-feeding-text {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
}

.feeding-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.feeding-record {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 3rpx solid #ff6b35;
}

.feeding-time {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  min-width: 80rpx;
}

.feeding-order {
  font-size: 22rpx;
  color: #666;
  min-width: 70rpx;
}

.feeding-amount {
  font-size: 22rpx;
  color: #ff6b35;
  font-weight: bold;
}

/* 饥饿弹窗样式 */
.hungry-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.hungry-modal {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-content {
  padding: 40rpx;
}

.modal-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.modal-body {
  margin-bottom: 40rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  display: block;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feed-btn {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.3);
}

.feed-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.4);
}

.diet-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.diet-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}
